
public class Staircase 
{
	public static void main(String[]args) 
	{
		staircase(4);
		//staircase(6);
	}
	
	private static void staircase(int n) 
	{
		for(int i = 0; i < n; i++)
		{
            for(int k = 1; k <= n; k++)
            {
            	if(k < n - i) 
            	{
            		System.out.print(" ");
            	}
            	else 
            	{
            		System.out.print("#");
            	}
            }
            System.out.println("");
        }
	}
}
